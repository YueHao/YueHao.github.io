@ARTICLE{TranHaoMustapha2022,
  AUTHOR={Tran, Anthony and Hao, Yue and Mustapha, Brahim and Martinez Marin, Jose L.},   
	TITLE={Predicting beam transmission using 2-dimensional phase space projections of hadron accelerators},      
	JOURNAL={Frontiers in Physics},      
	VOLUME={10},           
	YEAR={2022},      
	URL={https://www.frontiersin.org/articles/10.3389/fphy.2022.955555},       
	DOI={10.3389/fphy.2022.955555},      
	ISSN={2296-424X},   
  ABSTRACT={We present a method to compress the 2D transverse phase space projections from a hadron accelerator and use that information to predict the beam transmission. This method assumes that obtaining at least three projections of the 4D transverse phase space is possible and that an accurate simulation model is available for the beamline. Using a simulated model, we show that—a computer can train a convolutional autoencoder to reduce phase-space information which can later be used to predict the beam transmission. Finally, we argue that although using projections from a realistic nonlinear distribution produces less accurate results, the method still generalizes well.}
}

